<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kletterverein</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/introStyle.css" />
    <link rel="stylesheet" href="~/css/rightMenueStyle.css" />
    <link rel="stylesheet" href="~/css/footer.css" />
    <link rel="stylesheet" href="~/css/mainNavbar.css" />
    <link rel="stylesheet" href="~/css/hoverEffects.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <style>
        ::-webkit-scrollbar {
           display:none;
        }
        html {
            scroll-behavior: smooth;
        }
        .img {
            max-height: 500px;
            object-fit: contain;
        }
    </style>
</head>
<body>

    <container>
        <header>
            <partial name="MainNavBar" />
        </header>
        <main>
            
            <content style="background-color: black; background-position: center; overflow-y:hidden">


                <div style="position:relative; float:right;" id="mySidenav" class="sidenav">
                    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                    <a class="head" href="#" style="font-weight:bold; cursor:default;">NEWS</a>
                    <a class="link" href="#" style="padding-left: 25%;">Services</a>
                    <a class="link" href="#" style="padding-left: 25%;">Clients</a>
                    <a class="link" href="#" style="padding-left: 25%;">Contact</a>
                </div>
                <div onclick="contact()" id="mainContent">
                    @RenderBody()
                </div>
            </content>
            @*<aside>
            Seitenbereich
        </aside>*@
        </main>
        <footer id="contact">
            <partial name="Footer" />
        </footer>
    </container>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/rightMenue.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/introScript.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
