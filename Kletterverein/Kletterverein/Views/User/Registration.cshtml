                            <input type="text" asp-for="Lastname" />
                            <span style="color:red;" asp-validation-for="Lastname"></span>
                        </div>
                    }

                    @if (Model != null && Model.Firstname != null)
                    {
                        <div class="field-wrap">
                            <label class="active" asp-for="Firstname">Vorname *</label>
                            <input type="text" asp-for="Firstname" />
                            <span style="color:red;" asp-validation-for="Firstname"></span>
                        </div>
                    }
                    else
                    {
                        <div class="field-wrap">
                            <label asp-for="Firstname">Vorname *</label>
                            <input type="text" asp-for="Firstname" />
                            <span style="color:red;" asp-validation-for="Firstname"></span>
                        </div>
