@model List<Kletterverein.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<!DOCTYPE html>
<html lang="">

<head>
    <link rel="stylesheet" href="~/css/shop.css" />
    <title>Product Card UI Design</title>

    <style>
        table {
            width: 100%;
        }

        th, td {
            text-align: center;
            padding-top: 100px;
            padding-right: 0px;
            padding-left: 110px;
        }
    </style>
</head>

<body>
   
   <div style="width: 100%; height:100%;">
       <table>

           @for (int i = 1; i <= 2; i++) {
            <tr>
               @for (int j = 1; j <= 3; j++) {

                   <td>
                       @foreach(Product p in Model) {
                        <partial name="productCard" data="@p"/>
                        }
                   </td>
                }
            </tr>             
            } 
           
       </table>
   </div>  

</body>

</html>




