@model List<Kletterverein.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

@Model

<div style="width: 100%; height:100%;">
    <table>
        @for (int i = 1; i <= 2; i++) {
            <tr>
           @for (int j = 1; j <= 3; j++) {
                <td>
                    @foreach (Product p in Model) {


                        <div class="wrapper">
                            <div class="card">
                                <div class="imgBx">
                                    <img src="http://pngimg.com/uploads/running_shoes/running_shoes_PNG5782.png" alt="nike-air-shoe">
                                </div>

                                <div class="contentBx">

                                    <h2>@p.Productname</h2>

                                    <div class="description">
                                        <h3>Description</h3>
                                        <p>@p.Description</p>
                                    </div>

                                    <a href="#">Buy Now</a>
                                </div>

                            </div>
                        </div>


                    }
                </td>
            }
            </tr>             
         }   
    </table>
</div>  




